<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/ic_details_top_bg">

        <ImageView
            android:id="@+id/iv_actor_icon"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/channel_defult_up" />

        <LinearLayout
            android:id="@+id/ll_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/iv_actor_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_details_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="为中华之崛起而读书"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_details_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:ellipsize="end"
                android:text="为中华之崛起而读书"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_details_resource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:text="为中华之崛起而读书"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:drawableLeft="@drawable/bestv"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_details_play"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_btn_play" />

                <Button
                    android:id="@+id/btn_details_off_line"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_btn_download" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/tab_item_details_up" />


    <TextView
        android:id="@+id/tv_details_jianjie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines="3"
        android:text="这是一个滑动式抽屉的示例"
        android:textColor="#000000"
        android:textSize="15sp" />
    <ImageView
        android:id="@+id/iv_vd_jq_arrow"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/vd_jq_arrow_down"/>


</LinearLayout>