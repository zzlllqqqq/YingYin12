<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#3097fd">

    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ly_ic_title_back"
        android:visibility="gone" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_margin="12dp"
        android:layout_toRightOf="@id/ib_back"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/view"
        android:text="电影"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/ib_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_search"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/ib_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="12dp"
        android:layout_toLeftOf="@id/ib_search"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_tit_filter"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/search_shap"
        android:hint="请输入片名或主演名"
        android:imeOptions="actionSearch"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="13sp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/ib_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_search"
        android:layout_alignRight="@+id/et_search"
        android:layout_centerVertical="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:visibility="gone"
        android:src="@drawable/letv_search_text_delete"
        android:textCursorDrawable="@null"
        android:background="@android:color/transparent"
        />


</RelativeLayout>

