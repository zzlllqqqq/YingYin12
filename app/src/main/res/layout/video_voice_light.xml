<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="120dp"
                android:layout_height="120dp"
    >

    <LinearLayout
        android:id="@+id/ll_video_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/rec_bg">

        <ImageView
            android:id="@+id/iv_video_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/voice_img" />

        <TextView
            android:id="@+id/tv_voice_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30%"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_video_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/rec_bg">

        <ImageView
            android:id="@+id/iv_video_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/light_big_bg" />

        <TextView
            android:id="@+id/tv_light_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30%"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_voice_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:55"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/rec_textview_bg"/>

</RelativeLayout>