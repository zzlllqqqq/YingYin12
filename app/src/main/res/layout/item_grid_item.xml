<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="150dp">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_grid_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/item_grid_item_icon" />

        <ImageView
            android:id="@+id/iv_grid_tag_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_grid_item_icon"
            android:layout_alignTop="@+id/iv_grid_item_icon"
            android:src="@drawable/ic_tag_dianying"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_grid_item_fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/iv_grid_item_icon"
            android:layout_alignBottom="@id/iv_grid_item_icon"
            android:background="#88000000"
            android:paddingBottom="2dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="2dp"
            android:text="7.7分"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_grid_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rl"
        android:layout_below="@id/rl"
        android:text="电影"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_grid_item_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rl"
        android:layout_below="@id/tv_grid_item_title"
        android:text="电影描述"
        android:textColor="@android:color/darker_gray"
        android:textSize="11sp" />

</RelativeLayout>