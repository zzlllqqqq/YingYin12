<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/item_icon_search"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:background="@drawable/channel_defult_up"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title_search"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="#000000"
                android:textSize="15sp"/>

            <TextView

                android:id="@+id/item_media_search"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:padding="5dp"
                android:text="节目类型"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:paddingLeft="5dp"
                android:background="@drawable/dianying"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/item_score_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评分"
                    android:paddingLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="#ed963e"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="分/"/>
                <TextView
                    android:id="@+id/item_year_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年份"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/item_type_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="节目类型"
                    android:textSize="12sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/item_actor_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="演员"
                android:textColor="#3e3a3a"
                android:textSize="13sp"
                android:padding="5dp"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:background="#7e7a7a"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</LinearLayout>