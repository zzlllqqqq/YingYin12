<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/ic_details_top_bg">

    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ly_ic_title_back" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_margin="12dp"
        android:layout_toRightOf="@id/ib_back"
        android:background="@android:color/white"
        />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/view"
        android:ellipsize="marquee"
        android:focusable="true"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:textColor="@android:color/white"
        android:textSize="20sp" />



    <ImageButton
        android:id="@+id/ib_idea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_detail_suggest"
        />
    <ImageButton
        android:id="@+id/ib_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="12dp"
        android:layout_toLeftOf="@id/ib_idea"
        android:background="@drawable/collect_selector"/>


</RelativeLayout>

